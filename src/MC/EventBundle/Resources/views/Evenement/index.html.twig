{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Evenement list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomevenement</th>
                <th>Nomorganisateur</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Heuredebut</th>
                <th>Heurefin</th>
                <th>Descriptif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('mycampus_event_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nomEvenement }}</td>
                <td>{{ entity.nomOrganisateur }}</td>
                <td>{% if entity.dateDebut %}{{ entity.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateFin %}{{ entity.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.heureDebut }}</td>
                <td>{{ entity.heureFin }}</td>
                <td>{{ entity.descriptif }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('mycampus_event_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('mycampus_event_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('mycampus_event_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
